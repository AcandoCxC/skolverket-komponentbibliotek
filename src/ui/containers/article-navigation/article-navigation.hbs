{{#each sections}}
<div class="skv-section skv-section--boxed">
  {{#if title}}
  <header class="skv-section__header">
    <h2 class="h3 skv-section__header-title"><span class="skv-section__header-title-text">{{ title }}<span></h2>
  </header>
  {{/if}}
  <div class="skv-section__body">
    <div class="row">
      {{#each items}}
      <div class="col-12 col-md-{{../colspan}}">
        <ul class="skv-content-navigation-list">
          <li class="skv-content-navigation-list__item skv-content-navigation-list__item--no-border">
            {{#if imageUrl}}
            <img src="{{imageUrl}}" class="skv-content-navigation-list__item-image-large" />
            {{/if}}
            {{#if title}}
            <a href="{{ url }}" class="skv-content-navigation-list__item-link text-standard">
              {{title}} <i class="icon-arrow icon-arrow--lg"></i>
            </a>
            {{#if description}}<p class="skv-content-navigation-list__item-text text-small">{{description}}</p>{{/if}}
            {{/if}}
          </li>
        </ul>
      </div>
      {{/each}}
    </div>
  </div>
</div>
{{/each}}
