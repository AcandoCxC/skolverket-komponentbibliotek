<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-5">
        <div class="footer__header-container">
          <a class="footer__logo" href="#">{{ logoAlt }}</a>
          <div class="footer__description text-standard">{{description}}</div>
        </div>
      </div>
      <div class="col-12 col-lg-7">
        <div class="footer__navigation-container">
          <ul class="footer__navigation">
            {{#each navigation}}
            <li class="footer__navigation-item">
              <a href="{{url}}" class="footer__navigation-item-link text-standard">
                {{label}}
                <i class="icon-arrow icon-arrow--white"></i>
              </a>
            </li>
            {{/each}}
          </ul>
          <ul class="footer__navigation">
            {{#each links}}
            <li class="footer__navigation-item footer__navigation-item--no-border-bottom">
              <a href="#5" class="footer__navigation-item-link footer__navigation-item-link--purple text-small">
                {{label}}
              </a>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>