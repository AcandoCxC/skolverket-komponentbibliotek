<div class="skv-card" data-js-accessible-link data-js-accessible-link-focus-class="skv-card--focused">
  {{#if image }}
    <img class="skv-card__image" src="{{ image.src }}" alt="{{ image.alt }}"/>
  {{/if}}
  <div class="skv-card__content{{#eq layout 'textLink' }} skv-card__content--center{{/eq}}">
    {{#if preHeadline }}<span class="skv-card__pre-headline">{{ preHeadline }}</span>{{/if}}
    <h2 class="skv-card__headline">
      <a class="skv-card__headline-link{{#eq layout 'imageLink' }} skv-card__headline-link--boxed{{/eq}}" href="{{ url }}" data-js-accessible-link-url>
        {{ headline }}
        {{#eq linkType 'external' }}
          {{> @icon name='external' inline=true }}
        {{ else }}
          {{> @icon name='chevron-right' middle=true }}
        {{/eq}}
      </a>
    </h2>
    {{#if teaser}}
      <p class="skv-card__teaser">{{{ teaser }}}</p>
    {{/if}}
  </div>
</div>
