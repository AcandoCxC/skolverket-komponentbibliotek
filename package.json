{
  "name": "sv-component-library",
  "version": "0.1.2",
  "engines": {
    "node": "8.12.0",
    "npm": "4.2.0"
  },
  "private": true,
  "homepage": "https://skolverket.github.io/styleguide",
  "scripts": {
    "dev": "parallelshell \"fractal start --sync\" \"gulp -s\"",
    "start": "npm-run-all -p watch-*",
    "build": "npm-run-all build-docs* build-css* copy-assets",
    "deploy": "gh-pages -d public --dotfiles",
    "watch-docs": "stylemark -i src/docs -o public -c stylemark.yml -w -b",
    "build-docs": "stylemark -i src/docs -o public -c stylemark.yml",
    "build-css": "node-sass-chokidar src/scss/skolverket.scss --include-path=src -o public/dist/css",
    "build-css-prefix": "postcss public/dist/css/*.css --use autoprefixer -d public/dist/css",
    "copy-assets": "cpx \"src/assets/**/*\" public/dist/assets",
    "watch-assets": "cpx \"src/assets/**/*\" public/dist/assets --watch",
    "watch-css": "npm run build-css && node-sass-chokidar src/scss/skolverket.scss --include-path=src -o public/dist/css --watch --recursive",
    "predeploy": "npm run build",
    "postinstall": "node gulp/fractal-patch/patch.js"
  },
  "dependencies": {
    "@frctl/fractal": "^1.1.7",
    "autoprefixer": "^8.0.0",
    "babel-core": "~6.26.0",
    "babel-polyfill": "~6.26.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-stage-2": "~6.24.1",
    "babelify": "~8.0.0",
    "browserify": "~14.5.0",
    "cpx": "^1.5.0",
    "del": "~3.0.0",
    "gh-pages": "^1.1.0",
    "gulp": "~3.9.1",
    "gulp-autoprefixer": "~4.0.0",
    "gulp-environments": "~0.1.2",
    "gulp-flatten": "~0.3.1",
    "gulp-rename": "~1.2.2",
    "gulp-replace": "~0.6.1",
    "gulp-sass": "~3.1.0",
    "gulp-sequence": "~0.4.6",
    "gulp-sourcemaps": "~2.6.1",
    "gulp-svgmin": "~1.2.4",
    "gulp-svgstore": "~6.1.0",
    "gulp-uglify": "~3.0.0",
    "lazysizes": "~4.0.1",
    "node-sass-chokidar": "^0.0.3",
    "normalize.scss": "~0.1.0",
    "npm-run-all": "^4.1.2",
    "parallelshell": "~3.0.2",
    "postcss-cli": "^5.0.0",
    "sass-lint": "^1.12.1",
    "stylemark": "^0.6.4",
    "vinyl-buffer": "~1.0.0",
    "vinyl-source-stream": "~1.1.0",
    "watchify": "~3.9.0"
  }
}
