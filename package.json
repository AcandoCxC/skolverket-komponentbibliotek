{
  "name": "sv-component-library",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://acandocxc.github.io/skolverket-komponentbibliotek",
  "scripts": {
    "start": "npm-run-all -p watch-css watch-docs watch-assets",
    "build": "npm-run-all build-css* copy-assets",
    "deploy": "gh-pages -d build",
    "watch-docs": "stylemark -i src/docs -o public -c stylemark.yml -w -b",
    "start-zip": "react-scripts-ts start",
    "build-zip": "react-scripts-ts build",
    "build-css": "node-sass-chokidar src/scss/skolverket.scss --include-path=src -o public/dist/css",
    "copy-assets": "cp -R src/assets/ public/dist/assets/",
    "watch-assets": "cpx 'src/assets/**/*' public/dist/assets --watch",
    "watch-css": "npm run build-css && node-sass-chokidar src/scss/skolverket.scss --include-path=src -o public/dist/css --watch --recursive",
    "predeploy": "npm run build"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "gh-pages": "^1.1.0",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "sass-lint": "^1.12.1",
    "stylemark": "^0.6.3"
  }
}
